<% if current_user %>
<div class="new_comment_form">
  <form action="/comment" method="POST">
    <input type="text" name="comment[title]"><br>
    <input type="hidden" name="comment[article_id]" value="<%= article_id %>">
    <textarea name="comment[content]"></textarea><br>
    <input type="submit">
  </form>
</div>
<% end %>